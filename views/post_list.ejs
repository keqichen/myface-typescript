<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>

<ul>
    <% postList.results.forEach(function(post) {%>
        <li>
            <div><%= post.id %> - <%= post.message %>-<%= format(post.createdAt, "yyyy-MM-dd HH:mm:ss") %></div>
            <div class="post-img"><img alt = "This is a lovely image" src= <%= post.imageUrl %>/></div>

            <div class="button">
                <form method="post" action="/posts/<%= post.id %>/like/"> 
                    <button id="like-button">Like</button>
                </form>

                <form method="post" action="/posts/<%= post.id %>/dislike/">
                    <button id="dislike-button">Dislike</button>
                </form>
            </div>
        </li>
    <% }); %>
</ul>
<%if (postList.next) { %>
    <a href="<%= postList.next %>">Next</a>
<% } %>
<%if (postList.previous) { %>
    <a href="<%= postList.previous %>">Previous</a>
<% } %>
</body>
<%- include('_footer') -%>
</html>